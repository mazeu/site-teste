@model ContatoModel;
@{
    ViewData["Title"] = "Apagar Contato";
}
<h1 class="text-center">Deseja apagar o contato: @Model.Nome ?</h1>

<div class="btn-group text-center mx-auto">
    <a role="button" class="btn btn-primary active" asp-route-id="@Model.Id"
       asp-controller="Contato" asp-action="ApagarContatoBanco">Sim</a>
    <a role="button" class="btn btn-danger"
       asp-controller="Contato" asp-action="Index">Cancelar</a>
</div>