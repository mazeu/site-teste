@model List<ContatoModel>
@{
	ViewData["Title"] = "Listagem de Contatos";
}
<div class="my-4">
    <a class="btn btn-success" role="button" asp-controller="Contato" asp-action="CriarContato">Adicionar Contato</a>
</div>
<h1 class="display-4">Listagem de Contatos</h1>

@if(TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["MensagemSucesso"]
    </div>
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["MensagemErro"]
    </div>
}
<table class="table" id="tablesContatos">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nome</th>
      <th scope="col">Email</th>
      <th scope="col">Celular</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
   @if(Model != null && Model.Any()){
       foreach (ContatoModel contato in Model)
       {
                <tr>
                    <th scope="row">@contato.Id</th>
                    <td>@contato.Nome</td>
                    <td>@contato.Email</td>
                    <td>@contato.Celular</td>
                    <td>
                        <div class="btn-group">
                            <a role="button" class="btn btn-primary active" asp-route-id="@contato.Id"
                       asp-controller="Contato" asp-action="EditarContato">Editar</a>
                            <a role="button" class="btn btn-danger" asp-route-id="@contato.Id"
                       asp-controller="Contato" asp-action="ApagarContato">Apagar</a>
                        </div>
                    </td>
                </tr>
            }
   }
    
    
  </tbody>
</table>