@model ContatoModel;
@{
    ViewData["Title"] = "Criar Contato";
}
<h1 class="display-4">Criar Contato</h1>

<form asp-controller="Contato" asp-action="CriarContato" method="post">
    <div class="mb-3">
        <label for="nome" class="form-label">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" id="nome" placeholder="Digite o seu nome" >
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" asp-for="Email" class="form-control" id="email" placeholder="Digite o seu email" >
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="mb-3">
        <label for="celular" class="form-label">Celular</label>
        <input type="tel" asp-for="Celular" class="form-control" id="celular" placeholder="Digite o seu telefone celular" >
        @Html.ValidationMessageFor(x => x.Celular)
    </div>
    
    <button type="submit" class="btn btn-primary">Criar</button>
    <a role="button" class="btn btn-secondary" asp-controller="Contato" asp-action="Index">Cancelar</a>
</form>